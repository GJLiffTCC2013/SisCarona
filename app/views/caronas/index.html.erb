<h1>Lista de Caronas</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Senha</th>
    <th>Nome</th>
    <th>Email</th>
    <th>Endereco</th>
    <th>Telefone</th>
    <th>Rg</th>
    <th>Cpf</th>
    <th>Pontos</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @caronas.each do |carona| %>
  <tr>
    <td><%= carona.login %></td>
    <td><%= carona.senha %></td>
    <td><%= carona.nome %></td>
    <td><%= carona.email %></td>
    <td><%= carona.endereco %></td>
    <td><%= carona.telefone %></td>
    <td><%= carona.rg %></td>
    <td><%= carona.cpf %></td>
    <td><%= carona.pontos %></td>
    <td><%= link_to 'Mostrar', carona %></td>
    <td><%= link_to 'Editar', edit_carona_path(carona) %></td>
    <td><%= link_to 'Excluir', carona, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

