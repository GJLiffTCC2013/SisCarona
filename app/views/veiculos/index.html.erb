<h1>Lista de Veiculos</h1>

<table>
  <tr>
    <th>Placa</th>
    <th>Modelo</th>
    <th>Marca</th>
    <th>Cor</th>
    <th>Pontos</th>
    <th>Motorista</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @veiculos.each do |veiculo| %>
  <tr>
    <td><%= veiculo.placa %></td>
    <td><%= veiculo.modelo %></td>
    <td><%= veiculo.marca %></td>
    <td><%= veiculo.cor %></td>
    <td><%= veiculo.pontos %></td>
    <td><%= veiculo.motoristum.try :nome %></td>
    <td><%= link_to 'Mostrar', veiculo %></td>
    <td><%= link_to 'Voltar', edit_veiculo_path(veiculo) %></td>
    <td><%= link_to 'Excluir', veiculo, :confirm => 'Voce tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

